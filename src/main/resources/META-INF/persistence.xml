<persistence xmlns="http://java.sun.com/xml/ns/persistence"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
version="2.0">
 
<persistence-unit name="Survey_PersistenceUnit" transaction-type="RESOURCE_LOCAL">
<description>
Persistence unit for the JPA tutorial of the Hibernate Getting Started Guide
</description>
<!-- <provider>org.hibernate.ejb.HibernatePersistence</provider> -->
<class>com.v2tech.surveysystem.domain.Base</class>
<class>com.v2tech.surveysystem.domain.User</class>
<class>com.v2tech.surveysystem.domain.SurveySession</class>
<class>com.v2tech.surveysystem.domain.QuestionAnswer</class>
<class>com.v2tech.surveysystem.domain.DoubleQuestionAnswer</class>


 
	<properties>
	
	<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
	<property name="hibernate.show_sql" value="true" />
	<property name="hibernate.hbm2ddl.auto" value="update" />
	
	<!-- Important -->
        <property name="hibernate.c3p0.max_size" value="300" />
        <property name="hibernate.c3p0.min_size" value="1" />
        <property name="hibernate.c3p0.acquire_increment" value="1" />
        <property name="hibernate.c3p0.idle_test_period" value="300" />
        <property name="hibernate.c3p0.max_statements" value="0" />
        <property name="hibernate.c3p0.timeout" value="100" />
         <!--  use a file system based index -->
<!--          <property name="hibernate.search.default.directory_provider"  -->
<!--                    value="org.hibernate.search.store.impl.FSDirectoryProvider"/> -->
<!--          directory where the indexes will be stored -->
<!--          <property name="hibernate.search.default.indexBase"  -->
<!--                    value="/opt/luceneData/"/> -->
          
	</properties>
 
</persistence-unit>
 
</persistence>